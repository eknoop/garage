<% if @machine.errors.any? %>
  <div id="error_expl" class="panel panel-danger">
    <div class="panel-heading">
      <h3 class="panel-title"><%= pluralize(@machine.errors.count, "error") %> prohibited this machine from being saved:</h3>
    </div>
    <div class="panel-body">
      <ul>
      <% @machine.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  </div>
<% end %>

<div class="form-group">
  <%= f.label :year, :class => 'control-label col-lg-2' %>
  <div class="col-lg-10">
    <%= f.text_field :year, :class => 'form-control' %>
  </div>
  <%=f.error_span(:year) %>
</div>
<div class="form-group">
  <%= f.label :make, :class => 'control-label col-lg-2' %>
  <div class="col-lg-10">
    <%= f.text_field :make, :class => 'form-control' %>
  </div>
  <%=f.error_span(:make) %>
</div>
<div class="form-group">
  <%= f.label :model, :class => 'control-label col-lg-2' %>
  <div class="col-lg-10">
    <%= f.text_field :model, :class => 'form-control' %>
  </div>
  <%=f.error_span(:model) %>
</div>
<div class="form-group">
  <%= f.label :details, :class => 'control-label col-lg-2' %>
  <div class="col-lg-10">
    <%= f.text_field :details, :class => 'form-control' %>
  </div>
  <%=f.error_span(:details) %>
</div>
<div class="form-group">
  <%= f.label :purchase_price, "Purchase Price ($)", :class => 'control-label col-lg-2' %>
  <div class="col-lg-10">
    <%= f.text_field :purchase_price, :class => 'form-control' %>
  </div>
  <%=f.error_span(:purchase_price) %>
</div>
<div class="form-group">
  <div class="col-lg-offset-2 col-lg-10">
    <%= f.submit nil, :class => 'btn btn-primary' %>
