<p id="notice"><%= notice %></p>

<h1>Listing Machines</h1>

<table>
  <thead>
    <tr>
      <th>Year</th>
      <th>Make</th>
      <th>Model</th>
      <th>Details</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @machines.each do |machine| %>
      <tr>
        <td><%= machine.year %></td>
        <td><%= machine.make %></td>
        <td><%= machine.model %></td>
        <td><%= machine.details %></td>
        <td><%= link_to 'Show', machine %></td>
        <td><%= link_to 'Edit', edit_user_machine_path(current_user, machine) %></td>
        <td><%= link_to 'Destroy', machine, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

