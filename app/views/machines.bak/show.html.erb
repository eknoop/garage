<p id="notice"><%= notice %></p>

<p>
  <strong>Year:</strong>
  <%= @machine.year %>
</p>

<p>
  <strong>Make:</strong>
  <%= @machine.make %>
</p>

<p>
  <strong>Model:</strong>
  <%= @machine.model %>
</p>

<p>
  <strong>Details:</strong>
  <%= @machine.details %>
</p>

<p>
  <table>
    <thead>
      <tr>
        <th>Cost</th>
        <th>Purpose</th>
        <th>Description</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @machine.expenses.each do |expense| %>
        <tr>
          <td>$<%= expense.cost/100.0 %></td>
          <td><%= expense.purpose %></td>
          <td><%= expense.description %></td>
          <td><%= link_to 'Show', expense %></td>
          <td><%= link_to 'Edit', edit_expense_path(expense) %></td>
          <td><%= link_to 'Destroy', expense, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</p>

<%= link_to 'Edit', edit_machine_path(@machine) %> |
<%= link_to 'Back', user_machines_path(current_user) %>
